                <!-- back content -->
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.flip.min.js"></script>
    <script>
        $(function () {
            $(".cell-container").flip({
                axis: "y", // y or x
                trigger: "click", // click or hover
                speed: 400
            });
        });
    </script>
}