@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{
    <style>
        .matrix {
            width: 600px;
            height: 600px;
            background-color: grey;
        }

        .cell-container {
            width: 296px;
            height: 296px;
            border: 1px solid black;
            float: left;
            margin: 1px;
        }

        .red-cell {
            background-color: #FF4D4D;
        }

        .white-cell {
            background-color: white;
        }
    </style>
}

